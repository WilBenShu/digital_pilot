{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}


{% block fos_user_content %}


    <div class="container">
        <div class="row">
            <div class="col-xs-10 col-sm-8 col-md-4">
                <div class="erreur">
                    {% if error %}
                        <div><!--{{ error.messageKey|trans(error.messageData, 'security') }}--><p class="bg-danger"><i class="fa fa-exclamation-circle"></i>Mauvais login ou mot de passe</p></div>
                    {% endif %}
                </div>

                <div class="content">
                    <div class="titreConnexion">
                        <h1>Page de connexion</h1>
                    </div>

                    <form class="form-inline" action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />


                        <div class="form-group">
                            <label for="username">Login</label>
                            <input type="text" class="form-control"  id="username" name="_username"  value="{{ last_username }}" required="required" />
                        </div><br/>

                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="_password" required="required" />
                        </div><br/>

                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">Se souvenir de moi</label>

                        <input type="submit" id="_submit" name="_submit" value="Connexion" />
                    </form>
                </div>

            </div>
        </div>
    </div>



{% endblock fos_user_content %}
